<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_gradient_color"
    tools:context="com.stcu.appcolectivo.ui.MainActivity">

    <!--borrar-->
    <fragment
        android:id="@+id/main_fragment"
        android:name="com.stcu.appcolectivo.ui.MainFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        tools:layout="@layout/fragment_main"
        android:layout_alignParentLeft="true" />

<!--    desliza para actualizar-->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="2000dp"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

<!--ver que hacia esto-->
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_fragment"
        android:layout_centerHorizontal="true"
        android:text="Obtener ubicacion"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/tvUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:text="Ubicacion GPS!"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvSeleccionLinea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/alata"
        android:text="Seleccionar linea:"
        android:textSize="16sp" />


    <Spinner
        android:id="@+id/spinnerSelLinea"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/tvSeleccionLinea"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:spinnerMode="dialog"
        android:background="@drawable/spinner_selector"/>

    <TextView
        android:id="@+id/tvSeleccionColectivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/spinnerSelLinea"
        android:fontFamily="@font/alata"
        android:text="Seleccionar colectivo:"
        android:textAllCaps="false"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/tvSeleccionRecorrido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerSelColectivo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/alata"
        android:text="Seleccionar recorrido:"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/spinnerSelColectivo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/tvSeleccionColectivo"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:spinnerMode="dialog"
        android:background="@drawable/spinner_selector" />


    <Spinner
        android:id="@+id/spinnerSelRecorrido"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/tvSeleccionRecorrido"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/spinner_selector"
        android:spinnerMode="dialog" />

    <TextView
        android:id="@+id/tvLineaSeleccionada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvColectivoSeleccionado"
        android:layout_centerHorizontal="true"
        android:text="" />



    <Button
        android:id="@+id/btnIniciarServicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerSelRecorrido"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_follow_style"
        android:onClick="iniciarServicio"
        android:text="Iniciar Servicio" />


    <Button
        android:id="@+id/fin_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnIniciarServicio"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_follow_style"
        android:onClick="finServicio"
        android:text="Fin Servicio" />

    <TextView
        android:id="@+id/tv_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="#D83F3F"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:text="sin conexion"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:visibility="gone" />

<!--para probar-->
    <TextView
        android:id="@+id/tvColectivoSeleccionado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:text="" />


</RelativeLayout>
