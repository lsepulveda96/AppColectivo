    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textImputLayoutLinea"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_below="@+id/tvSeleccionLinea"
        android:layout_marginTop="10dp"
        android:theme="@style/Theme.MaterialComponents.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/bus_line_icon"
        app:helperText="*Requerido"
        app:helperTextTextColor="#f00"
        >

        <AutoCompleteTextView
            android:id="@+id/autoCompleteLinea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:hint="Linea"/>

    </com.google.android.material.textfield.TextInputLayout>



    <TextView
        android:id="@+id/tvSeleccionColectivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textImputLayoutLinea"
        android:fontFamily="@font/alata"
        android:text="Seleccionar colectivo:"
        android:textAllCaps="false"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/tvSeleccionRecorrido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textImputLayoutColectivo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/alata"
        android:text="Seleccionar recorrido:"
        android:textAllCaps="false"
        android:textSize="16sp" />

