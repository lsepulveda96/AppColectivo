    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textImputLayoutRecorrido"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_below="@+id/tvSeleccionRecorrido"
        android:layout_marginTop="10dp"
        android:theme="@style/Theme.MaterialComponents.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/road_map_icon"
        app:helperText="*Requerido"
        app:helperTextTextColor="#f00"
        >

        <AutoCompleteTextView
            android:id="@+id/autoCompleteRecorrido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:hint="Recorrido"/>

    </com.google.android.material.textfield.TextInputLayout>







    <TextView
        android:id="@+id/tvLineaSeleccionada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvColectivoSeleccionado"
        android:layout_centerHorizontal="true"
        android:text="" />



    <Button
        android:id="@+id/btnIniciarServicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textImputLayoutRecorrido"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_follow_style"
        android:textColor="#ffff"
        android:onClick="iniciarServicio"
        android:text="Iniciar Servicio" />


    <Button
        android:id="@+id/fin_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnIniciarServicio"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_follow_style"
        android:textColor="#ffff"
        android:onClick="finServicio"
        android:text="Fin Servicio" />

    <TextView
        android:id="@+id/tv_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="#D83F3F"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:text="sin conexion"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:visibility="gone" />

